<!DOCTYPE html>
<html>
  <head>
    <title>Tekagami200</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
  <div class="container bg-light">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
  
      <%= link_to image_tag("logo_4d5156.png",:size=>"108x45",class: "wv-heading--title"), "/" %>
      
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
      </button>
      
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav" >
          <%= link_to "intro", "#" ,class: "nav-link" %>
          <%= link_to "prof", "#" ,class: "nav-link" %>
          <%= link_to "log_in", new_user_session_path ,class: "nav-link" %>
          <%= link_to "sign_up", new_user_registration_path ,class: "nav-link" %>
          <%= link_to "log_out", destroy_user_session_path ,:method => :get ,class: "nav-link",remote: true  %>

        </div>
      </div>

    </nav>
  </div>
    <%= yield %>
  </body>
</html>

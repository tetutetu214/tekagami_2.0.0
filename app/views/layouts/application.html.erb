<!DOCTYPE html>
<html>
  <head>
    <title>Tekagami200</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>

    <nav class="navbar navbar-expand-sm navbar-light bg-light">
      <div class="sign">
        <%= link_to image_tag("logo_4d5156.png",:size=>"108x45",class: "wv-heading--title"), "/" %>
      </div>    
      <%# <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>

      </button> %>
      
      <div class="collapse navbar-collapse justify-content-end " id="navbarNav">
        <div class="navbar-nav" >
         <% if user_signed_in? %>
          <%= link_to "log_out", destroy_user_session_path ,:method => :get ,class: "nav-link",remote: true  %>
         <% else %>
          <%= link_to "intro", "#" ,class: "nav-link mr-2" %>
          <%= link_to "prof", "#" ,class: "nav-link mr-2" %>
          <%= link_to "log_in", new_user_session_path ,class: "nav-link mr-2" %>
          <%= link_to "sign_up", new_user_registration_path ,class: "nav-link order-2 mr-2" %>
         <% end %>
        </div>
      </div>
    </nav>
  
    <%= yield %>
    
    <div class="footer bg-light">
      <div class= "footer_space">
        <div class="sign text-center">
          <%= link_to image_tag("logo_4d5156.png",:size=>"108x45",class: "wv-heading--title"), "/" %>
        </div>    
         <p class="text-center">Copyright Â© 2020 Tekagami, All Rights Reserved.</p>
      </div>
    </div>
  

</body>
</html>

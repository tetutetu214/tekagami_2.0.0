<div class="container bg-light mb-auto">

      <div class="col-md-6 mx-auto text-center">
         <div class="header-title">
            <h1 class="wv-heading--title">
                <%= image_tag "logo_4d5156.png", :size=>"320x129",class: "img-responsive" %>
            </h1>
            <h2 class="wv-heading--subtitle">
               わすれてしまった<br>”わたし”をさがしに
            </h2>
         </div>
      </div>
  <div class="row">
   <div class="col-md-4 mx-auto">
      <div class="myform form ">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class='login-flash-message mb-3'>
          <%= flash[:notice] %>
          <%= flash[:alert] %>
        </div>

          <div class="field mb-2">
            <%= f.email_field :email, autofocus: true,class: "form-control my-input", id: "email" ,placeholder: "email" %>
          </div>

          <div class="field mb-2">
            <%= f.password_field :password, autofocus: true,class: "form-control my-input", id: "email" ,placeholder: "password" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field mb-2">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

            <div class="text-center ">
                <button type="submit" class=" btn btn-block send-button tx-tfm">log_in</button>
            </div>

        <% end %>

              <div class="col-md-12 ">
                <div class="login-or">
                    <hr class="hr-or">
                </div>
              </div>

              <div class="text-center ">
                <button type="submit" class=" btn btn-block send-button tx-tfm" href="new_user_registration_path" >
                    <%= render "shared/links" %>
                </button>
              </div>

            </div>
       </div>
    </div>
  </div>
</div>